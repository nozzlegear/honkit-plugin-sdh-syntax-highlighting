{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "outDir": "dist",
    "resolveJsonModule": true,
    "declaration": true,
    "paths": {
        "*": ["typings/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
